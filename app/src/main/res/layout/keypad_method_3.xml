<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="모음을 입력하는 예시를"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="보면서 천천히 배워봅시다."
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="모음을 입력하는 순서는"
                android:textColor="#646464"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="손으로 쓸 때와 같은 순서입니다."
                android:textColor="#646464"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="'ㅏ'"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="를 입력하는 방법"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입력 내용 : "
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text=""
                    android:gravity="center"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/reviewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다시보기"
                    android:textSize="23dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/root1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/root1_image1"
                        android:layout_width="80dp"
                        android:layout_height="53dp"
                        android:src="@drawable/keypad_moum_sebu1"/>
                    <TextView
                        android:id="@+id/root1_text1"
                        android:layout_width="70dp"
                        android:layout_height="53dp"
                        android:text="+"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/root1_image2"
                        android:layout_width="80dp"
                        android:layout_height="53dp"
                        android:src="@drawable/keypad_moum_sebu2"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/root2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="invisible">
                    <ImageView
                        android:id="@+id/root2_image1"
                        android:layout_width="80dp"
                        android:layout_height="53dp"
                        android:src="@drawable/keypad_moum_sebu2"/>
                    <TextView
                        android:id="@+id/root2_text1"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:text="+"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/root2_image2"
                        android:layout_width="80dp"
                        android:layout_height="53dp"
                        android:src="@drawable/keypad_moum_sebu2"/>
                    <TextView
                        android:id="@+id/root2_text2"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:text="+"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/root2_image3"
                        android:layout_width="80dp"
                        android:layout_height="53dp"
                        android:src="@drawable/keypad_moum_sebu3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/root3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/root3_image1"
                            android:layout_width="80dp"
                            android:layout_height="53dp"
                            android:src="@drawable/keypad_moum_sebu2"/>
                        <TextView
                            android:id="@+id/root3_text1"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:text="+"
                            android:textSize="40dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/root3_image2"
                            android:layout_width="80dp"
                            android:layout_height="53dp"
                            android:src="@drawable/keypad_moum_sebu3"/>
                        <TextView
                            android:id="@+id/root3_text2"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:text="+"
                            android:textSize="40dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:id="@+id/root3_image3"
                            android:layout_width="80dp"
                            android:layout_height="53dp"
                            android:src="@drawable/keypad_moum_sebu1"/>
                        <TextView
                            android:id="@+id/root3_text3"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:text="+"
                            android:textSize="40dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/root3_image4"
                            android:layout_width="80dp"
                            android:layout_height="53dp"
                            android:src="@drawable/keypad_moum_sebu2"/>
                        <TextView
                            android:id="@+id/root3_text4"
                            android:layout_width="53dp"
                            android:layout_height="53dp"
                            android:text="+"
                            android:textSize="40dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <ImageView
                            android:id="@+id/root3_image5"
                            android:layout_width="80dp"
                            android:layout_height="53dp"
                            android:src="@drawable/keypad_moum_sebu1"/>
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/frameLayout">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="이전"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="다음"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/keypad"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/touch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="터치"
                    android:textColor="#FF0000"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.060"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.210" />

                <TextView
                    android:id="@+id/touch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="터치"
                    android:textColor="#FF0000"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.360"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.210" />
                <TextView
                    android:id="@+id/touch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="터치"
                    android:textColor="#FF0000"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.650"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.210" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/ex_Layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#88000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입력하는 "
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="순서"
                    android:textColor="#FF0000"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="를"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="먼저 보여드리겠습니다."
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:padding="5dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/square"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="누른 키패드 순서대로"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하나씩 뜨는 것을 볼 수 있습니다."
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="키패드에 터치 글자가 보이는 것은"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="키패드가 눌리고 있다는 것을"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나타내기 위함입니다."
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/keypad_size" />
        </FrameLayout>
    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>